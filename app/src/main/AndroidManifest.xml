<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.tea.com">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityRegister"
            android:icon="@drawable/app_logo"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>

        <activity
            android:name=".DialogAddStudSubject"
            android:label="Add subjects"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"></activity>

        <activity
            android:name=".DialogMenu"
            android:label="Add subjects"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>

        <activity
            android:name=".DialogAddSection"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>

        <activity
            android:name=".DialogAddSectionOnly"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>

        <activity
            android:name=".Dialog_Setting"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>

        <activity
            android:name=".DialogExportGrade"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>
    </application>

</manifest>
